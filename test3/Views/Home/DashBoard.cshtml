@model List<test3.Models.TinTuc>
@{
    ViewBag.Title = "DanhSachTinTuc";
    ViewBag.ac = 1;
}

<h2>Danh sách tin tức</h2>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tiêu đề</th>
                        <th>Nội dung</th>
                        <th>Ngày</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tintuc in Model)
                    {
                        <tr>
                            <td>@tintuc.Id</td>
                            <td>@tintuc.TieuDe</td>
                            <td>@tintuc.NoiDung</td>
                            <td>@(tintuc.Ngay != null ? tintuc.Ngay.Value.ToString("dd/MM/yyyy") : "")</td>
                            <td><a href="~/Home/Xoa?id=@tintuc.Id">Xóa</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
