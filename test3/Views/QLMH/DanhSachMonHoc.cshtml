@model List<test3.Models.MonHoc>
@{
    ViewBag.Title = "DanhSachMonHoc";
    ViewBag.ac = 7;
}

<h2>Danh sách môn học</h2>
<form action="/QLMH/Search" method="get">
    <div class="form-group">
        <div style="display: flex">
            <input type="text" style="width:30%" name="searchMSSV" class="form-control" placeholder="Nhập MSSV cần tìm kiếm" /> &nbsp;
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            @Html.ActionLink("Export", "ExportMonHoc", "Export", null, new { @class = "btn btn-primary", @style = "margin-left: 600px;" })
        </div>
    </div>
</form>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Mã môn</th>
                        <th>Tên môn</th>
                        <th>Mã khoa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var monHoc in Model)
                    {
                        <tr>
                            <td>@monHoc.MaMon</td>
                            <td>@monHoc.TenMon</td>
                            <td>@monHoc.MaKhoa</td>
                            <td><a href="~/QLMH/Xoa?id=@monHoc.MaMon">Xóa</a></td>
                            <td><a href="~/QLMH/Suathongtin?id=@monHoc.MaMon">Sửa</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
