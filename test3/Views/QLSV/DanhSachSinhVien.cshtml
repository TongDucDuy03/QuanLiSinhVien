@model List<test3.Models.SinhVien>
@{
    ViewBag.ac = 1;
}

<h2>Danh sách sinh viên </h2>
<!-- Advanced Tables -->
<form action="/QLSV/Search" method="get">
    <div class="form-group">
        <div style="display: flex">
            <input type="text" style="width:30%" name="searchMSSV" class="form-control" placeholder="Nhập MSSV cần tìm kiếm" /> &nbsp;
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            <button class="btn btn-primary" style="margin-left: 600px;"><a href="~/Export/ExportSinhVien" class="export-link" >Export</a></button>
        </div>
    </div>
</form>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>MSSV</th>
                        @*
        <th>SvUser</th>
        <th>SvPass</th>*@
                        <th>Họ tên</th>
                        <th>Ngày sinh</th>
                        <th>Giới tính</th>
                        <th>Mã lớp</th>
                        <th>Nơi sinh</th>
                        <th>Mã khoa </th>
                        <th>Edit</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sinhVien in Model)
                    {
                        <tr>
                            <td>@sinhVien.MSSV</td>
                            @*
        <td>@sinhVien.SvUser</td>
        <td>@sinhVien.SvPass</td>*@
                            <td>@sinhVien.HoTenSV</td>
                            <td>@sinhVien.NgaySinhSV.ToString("dd/MM/yyyy")</td>
                            <td>@(sinhVien.GioiTinh ? "Nam" : "Nữ")</td>
                            <td>@sinhVien.MaLop</td>
                            <td>@sinhVien.NoiSinh</td>
                            <td>@sinhVien.MaKhoa</td>
                            <td><a href="~/QLSV/Xoa?id=@sinhVien.MSSV">Xóa</a></td>
                            <td><a href="~/QLSV/Suathongtin?id=@sinhVien.MSSV">Sửa</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<!--End Advanced Tables -->
