@model List<test3.Models.GiangVien>
@{
    ViewBag.Title = "DanhSachGiangVien";
    ViewBag.ac = 4;
}

<h2>Danh sách giảng viên</h2>
<form action="/QLGV/Search" method="get">
    <div class="form-group">
        <div style="display: flex">
            <input type="text" style="width:30%" name="searchMGV" class="form-control" placeholder="Nhập MGV cần tìm kiếm" /> &nbsp;
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>

            @Html.ActionLink("Export", "ExportGiangVien", "Export", null, new { @class = "btn btn-primary", @style = "margin-left: 600px;" })
        </div>
    </div>
</form>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>MGV</th>
                        @*
                            <th>SvUser</th>
                            <th>SvPass</th>*@
                        <th>Họ tên</th>
                        <th>Ngày sinh</th>
                        <th>Giới tính</th>
                        <th>Mã khoa </th>
                        <th>Edit</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var giangVien in Model)
                    {
                        <tr>
                            <td>@giangVien.MGV</td>
                            @*
                                <td>@giangVien.SvUser</td>
                                <td>@giangVien.SvPass</td>*@
                            <td>@giangVien.HoTenGV</td>
                            <td>@giangVien.NgaySinhGV.ToString("dd/MM/yyyy")</td>
                            <td>@(giangVien.GioiTinh ? "Nam" : "Nữ")</td>
                            <td>@giangVien.MaKhoa</td>
                            <td><a href="~/QLGV/Xoa?id=@giangVien.MGV">Xóa</a></td>
                            <td><a href="~/QLGV/Suathongtin?id=@giangVien.MGV">Sửa</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
